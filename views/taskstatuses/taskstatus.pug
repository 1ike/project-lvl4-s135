extends /layouts/application.pug

block content

  h1= `Task Status "${f.object._name || f.object.name}"`
    =' '
    small.text-muted (edit status)

  - const url = urlFor('taskstatus', f.object.id)

  +formFor(f, { url, method: 'put' })
    +input(f, 'name')
    +button(f, 'Edit Task Status', 'btn btn-warning mt-3 mb-3')

  +formFor(f, { url, method: 'delete', clss: 'mt-5', confirm: 'Are you sure you want to delete Task Status?' })
    +button(f, 'Delete Task Status', 'btn btn-danger')